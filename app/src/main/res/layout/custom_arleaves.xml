<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="5sp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:elevation="10sp"
        app:cardCornerRadius="10sp"
        android:backgroundTint="@color/card"
        android:padding="2sp">

        <RelativeLayout
            android:padding="10sp"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:id="@+id/tv1"
                android:textColor="@color/black"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Name - "
                android:textSize="15sp"/>
            <TextView
                android:textColor="@color/black"
                android:id="@+id/arleave_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/app_name"
                android:textSize="15sp"
                android:layout_toRightOf="@+id/tv1"
                />
            <TextView
                android:textColor="@color/black"
                android:id="@+id/reasontv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Reason - "
                android:layout_below="@+id/arleave_name"
                android:textSize="15sp"/>
            <TextView
                android:textColor="@color/black"
                android:id="@+id/arleave_reason"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="reason"
                android:textSize="15sp"
                android:layout_toRightOf="@+id/reasontv"
                android:layout_below="@id/arleave_name"/>
            <TextView
                android:textColor="@color/black"
                android:id="@+id/fromdatetv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="From - "
                android:layout_below="@+id/reasontv"

                android:textSize="15sp"/>
            <TextView
                android:textColor="@color/black"
                android:id="@+id/arleave_fromdate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="12/12/2020"
                android:textSize="15sp"
                android:layout_toRightOf="@+id/fromdatetv"
                android:layout_below="@id/arleave_reason"/>
            <TextView
                android:textColor="@color/black"
                android:id="@+id/todatetv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="To - "
                android:layout_below="@+id/reasontv"
                android:layout_toRightOf="@+id/arleave_fromdate"
                android:paddingLeft="5sp"
                android:textSize="15sp"/>
            <TextView
                android:textColor="@color/black"
                android:id="@+id/arleave_todate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="12/12/2020"
                android:textSize="15sp"
                android:layout_toRightOf="@+id/todatetv"
                android:layout_below="@id/arleave_reason"/>
            <TextView
                android:textColor="@color/black"
                android:id="@+id/descriptiontv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Description -"
                android:layout_below="@+id/fromdatetv"
                android:textSize="15sp"/>
            <TextView
                android:textColor="@color/black"
                android:id="@+id/arleave_description"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Say what ever you want to say.. Like Any Description you have"
                android:textSize="15sp"
                android:layout_toRightOf="@+id/descriptiontv"
                android:layout_below="@id/arleave_fromdate"/>
            <TextView
                android:textColor="@color/black"
                android:id="@+id/statustv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="STATUS - "
                android:layout_below="@+id/arleave_description"
                android:textSize="25sp"
                android:textStyle="bold"/>
            <TextView
                android:textColor="@color/black"
                android:id="@+id/arleave_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Pending"
                android:textSize="25sp"
                android:layout_toRightOf="@+id/statustv"
                android:layout_below="@id/arleave_description"/>

        </RelativeLayout>

    </androidx.cardview.widget.CardView>
</LinearLayout>